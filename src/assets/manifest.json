{
    "name": "Project Starter Chrome Extension",
    "version": "1.0",
    "description": "Project Starter Chrome Extension with; Typescript, React, Mobx, React Router",
    "permissions": [
        "tabs",
        "contextMenus",
        "background"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action" : {
        "default_title": "Project Starter Chrome Extension",
        "default_popup": "index.html"
    },
    "manifest_version": 2
}